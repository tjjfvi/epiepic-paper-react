aspect=1.395555
cardHeight=(1/(4+2/3))*100vh
cardWidth=cardHeight/aspect

.Game
  width 100vw
  height 100vh
  display grid
  grid-template:
    "ouser ohand odeck odisc log" cardHeight \
    "osupp oplay status status log" cardHeight*(4/3) \
    "psupp pplay status status log" cardHeight*(4/3) \
    "puser phand pdeck pdisc log" cardHeight \
    / cardWidth*2 1fr cardWidth cardWidth auto;

  .Log
    grid-area log
  .status
    grid-area: status;
  for area in user hand deck disc supp play
    .{area}
      &.p
        grid-area: unquote("p"+area);
      &.o
        grid-area: unquote("o"+area);